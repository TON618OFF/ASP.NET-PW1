@model IEnumerable<P50_4_22.Models.CartItem>

@{
    ViewData["Title"] = "Корзина";
}

<h1>Корзина</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Создать новый элемент корзины</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Номер клиента</th>
            <th>Название продукта</th>
            <th>Количество</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Client.ClientName</td>
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.IdCartItem })" class="btn btn-warning">Редактировать</a>
                    <a href="@Url.Action("Delete", new { id = item.IdCartItem })" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
