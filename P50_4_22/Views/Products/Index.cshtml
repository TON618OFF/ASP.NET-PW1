@model IEnumerable<P50_4_22.Models.Product>

@{
    ViewData["Title"] = "Список продуктов";
}

<h2>Продукты</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Изображение</th>
            <th>Цена</th>
            <th>Описание</th>
            <th>Кол-во</th>
            <th>Категория</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.IdProduct</td>
                <td>@product.ProductName</td>
                <td>
                    <img src="~/images/@product.ProductImage" alt="@product.ProductName" style="width: 100px; height: auto;" />
                </td>
                <td>@product.ProductPrice.ToString("C")</td>
                <td>@product.ProductDescription</td>
                <td>@product.ProductAmount</td>
                <td>@product.Category.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.IdProduct" class="btn btn-warning btn-sm">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@product.IdProduct" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Create" class="btn btn-success">Добавить продукт</a>
</div>
