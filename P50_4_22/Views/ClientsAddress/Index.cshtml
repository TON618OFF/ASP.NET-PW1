@model IEnumerable<P50_4_22.Models.ClientsAddress>

@{
    ViewData["Title"] = "Список адресов клиентов";
}

<div class="clients-address-page">
    <h2>@ViewData["Title"]</h2>

    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Добавить адрес</a>
    </p>

    <div class="table-responsive">
        <table class="clients-address-table table">
            <thead>
                <tr>
                    <th>Адрес</th>
                    <th>Город</th>
                    <th>Почтовый код</th>
                    <th>Страна</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var address in Model)
                {
                    <tr>
                        <td>@address.AddressLocation</td>
                        <td>@address.AddressCity</td>
                        <td>@address.AddressPostalCode</td>
                        <td>@address.AddressCountry</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = address.IdClientAddress })" class="btn btn-warning">Редактировать</a>
                            <a href="@Url.Action("Delete", new { id = address.IdClientAddress })" class="btn btn-danger">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Уникальный стиль для страницы с адресами клиентов */
    .clients-address-page h2 {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
    }

    .clients-address-page .btn-primary {
        background-color: #007bff;
        color: white;
        font-size: 16px;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .clients-address-page .btn-primary:hover {
            background-color: #0056b3;
        }

    .clients-address-page .clients-address-table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .clients-address-page .clients-address-table th,
        .clients-address-page .clients-address-table td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .clients-address-page .clients-address-table th {
            background-color: #f4f4f4;
            color: #333;
        }

        .clients-address-page .clients-address-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .clients-address-page .clients-address-table tr:hover {
            background-color: #f1f1f1;
        }

    .clients-address-page .btn-warning {
        background-color: #ffc107;
        color: white;
    }

        .clients-address-page .btn-warning:hover {
            background-color: #e0a800;
        }

    .clients-address-page .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .clients-address-page .btn-danger:hover {
            background-color: #c82333;
        }

    .clients-address-page .table-responsive {
        margin-top: 20px;
    }
</style>
