@model P50_4_22.Models.Review

@if (User.Identity.IsAuthenticated)
{
    <div class="review-container">
        <h2>Оставить отзыв</h2>
        <form method="post" asp-action="AddReview" asp-controller="Catalog">
            <input type="hidden" name="ProductId" value="@Model.ProductId" /> <!-- Продукт, к которому добавляется отзыв -->
            <label for="rating">Оценка:</label>
            <select id="rating" name="ReviewRating" required>
                <option value="1">⭐</option>
                <option value="2">⭐⭐</option>
                <option value="3">⭐⭐⭐</option>
                <option value="4">⭐⭐⭐⭐</option>
                <option value="5">⭐⭐⭐⭐⭐</option>
            </select>


            <label for="comment">Комментарий:</label>
            <textarea id="comment" name="ReviewComment" rows="4" required></textarea>

            <button type="submit">Отправить</button>
        </form>
    </div>
}
else
{
    <div class="auth-warning">
        <h2>Необходимо <a href="/Authorize/Authorize">авторизоваться</a> чтобы оставлять отзывы.</h2>
        <p>Пожалуйста, войдите в свой аккаунт для оставления отзыва.</p>
    </div>
}

<style>
    .review-container {
        background: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 40px auto 0;
    }

        .review-container h2 {
            margin-bottom: 15px;
        }

        .review-container label {
            display: block;
            margin-top: 10px;
            font-weight: bold;
        }

        .review-container input, .review-container select, .review-container textarea {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .review-container button {
            background-color: #27ae60;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 1em;
            cursor: pointer;
            border-radius: 5px;
            margin-top: 15px;
        }

            .review-container button:hover {
                background-color: #219150;
            }

    .auth-warning {
        background-color: #f8d7da;
        padding: 20px;
        border-radius: 10px;
        max-width: 800px;
        margin: 40px auto 0;
        text-align: center;
        color: #721c24;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .auth-warning h2 {
            font-size: 1.5em;
            margin-bottom: 10px;
        }

        .auth-warning p {
            font-size: 1.1em;
            margin-top: 10px;
        }
</style>
