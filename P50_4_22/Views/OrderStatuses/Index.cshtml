@model IEnumerable<P50_4_22.Models.OrderStatus>

@{
    ViewData["Title"] = "Список статусов заказов";
}

<h2>Список статусов заказов</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Добавить новый статус</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название статуса</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var status in Model)
        {
            <tr>
                <td>@status.StatusName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = status.IdStatus })" class="btn btn-warning btn-sm">Редактировать</a>
                    <a href="@Url.Action("Delete", new { id = status.IdStatus })" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
