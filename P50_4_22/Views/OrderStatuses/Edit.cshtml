@model P50_4_22.Models.OrderStatus

@{
    ViewData["Title"] = "Редактировать статус";
}

<h2>Редактировать статус</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="StatusName" class="control-label">Название статуса</label>
        <input asp-for="StatusName" class="form-control" />
        <span asp-validation-for="StatusName" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>
