@model P50_4_22.Models.Role

@{
    ViewData["Title"] = "Редактировать роль";
}

<style>
    /* Уникальный стиль для страницы редактирования роли */
    .edit-role-page {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: white;
        padding: 20px 0;
    }

        .edit-role-page .form-container {
            max-width: 500px;
            margin: 0 auto;
            background: #ffffff;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .edit-role-page h2 {
            color: #444;
            font-size: 1.5rem;
            text-align: center;
            margin-bottom: 20px;
        }

        .edit-role-page .form-group {
            margin-bottom: 20px;
        }

        .edit-role-page .form-label {
            display: block;
            font-weight: bold;
            margin-bottom: 8px;
            color: #555;
        }

        .edit-role-page .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
        }

            .edit-role-page .form-control:focus {
                outline: none;
                border-color: #007bff;
                box-shadow: 0 0 4px rgba(0, 123, 255, 0.2);
            }

        .edit-role-page .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }

        .edit-role-page .btn-primary {
            background-color: #007bff;
            color: white;
            margin-right: 10px;
        }

            .edit-role-page .btn-primary:hover {
                background-color: #0056b3;
                transform: scale(1.03);
            }

        .edit-role-page .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

            .edit-role-page .btn-secondary:hover {
                background-color: #5a6268;
                transform: scale(1.03);
            }

        .edit-role-page .form-actions {
            display: flex;
            justify-content: flex-end;
            margin-top: 20px;
        }

        .edit-role-page .text-danger {
            font-size: 12px;
            color: #dc3545;
            margin-top: 5px;
            display: block;
        }
</style>

<div class="edit-role-page">
    <div class="form-container">
        <h2>@ViewData["Title"]</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="IdRole" />

            <div class="form-group">
                <label asp-for="RoleName" class="form-label">Название роли</label>
                <input asp-for="RoleName" class="form-control" placeholder="Введите новое название роли" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <!-- Добавьте другие поля для редактирования, если они есть -->
            <!-- Пример:
            <div class="form-group">
                <label asp-for="Description" class="form-label">Описание</label>
                <textarea asp-for="Description" class="form-control" placeholder="Введите описание роли"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            -->

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a asp-action="Index" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Включение клиентской валидации -->
    <partial name="_ValidationScriptsPartial" />
}
