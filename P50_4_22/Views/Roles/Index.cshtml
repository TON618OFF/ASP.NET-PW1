@{
    ViewData["Title"] = "Управление Ролями";
}

<div class="container mt-4">
    <h1 class="text-center">Управление Ролями</h1>
    <p class="text-center text-muted">Добавляйте, редактируйте и удаляйте роли в системе.</p>

    <!-- Кнопка для добавления новой роли -->
    <div class="text-end mb-3">
        <a href="@Url.Action("Create", "Roles")" class="btn btn-success">Добавить новую роль</a>
    </div>

    <!-- Таблица ролей -->
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>№</th>
                <th>Название роли</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                int index = 1;
                foreach (var role in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@role.RoleName</td>
                        <td class="text-center">
                            <!-- Кнопки для редактирования и удаления -->
                            <a href="@Url.Action("Edit", "Roles", new { id = role.IdRole })" class="btn btn-warning btn-sm me-2">Изменить</a>
                            <a href="@Url.Action("Delete", "Roles", new { id = role.IdRole })" class="btn btn-danger btn-sm"
                               onclick="return confirm('Вы уверены, что хотите удалить эту роль?');">Удалить</a>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">Нет данных для отображения.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
