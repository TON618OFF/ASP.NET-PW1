@model IEnumerable<P50_4_22.Models.Category>

@{
    ViewData["Title"] = "Категории";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-4">@ViewData["Title"]</h2>
        <a href="@Url.Action("Create")" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Создать Категорию
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Категория</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@category.CategoryName</td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = category.IdCategory })" class="btn btn-warning btn-sm me-2">
                                    <i class="bi bi-pencil"></i> Изменить
                                </a>
                                <a href="@Url.Action("Delete", new { id = category.IdCategory })" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Удалить
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted">Нет доступных категорий</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }
</style>
