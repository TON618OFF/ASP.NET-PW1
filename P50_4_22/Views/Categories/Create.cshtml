@model P50_4_22.Models.Category

<h2 class="text-center mt-4">Создание Категории</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-8 col-12">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="form-group">
                            <label asp-for="CategoryName" class="form-label fw-bold">Название Категории</label>
                            <input asp-for="CategoryName" class="form-control" placeholder="Введите название категории" />
                            <span asp-validation-for="CategoryName" class="text-danger small"></span>
                        </div>
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="bi bi-plus-circle"></i> Создать
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
