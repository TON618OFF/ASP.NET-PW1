@model P50_4_22.Models.Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Подробные сведения о продукте";
}

<h1>@Model.ProductName</h1>
<div class="product-container">
    <div class="product-card">
        <img src="~/images/@Model.ProductImage" alt="Game Image" class="product-image" />
        <div class="product-details">
            <div class="product-price">@Model.ProductPrice.ToString("N0") руб.</div>
            <button class="buy-button">Купить</button>
            <div class="product-description">
                <h4>Описание игры:</h4>
                <h5>@Model.ProductDescription</h5>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_Reviews", new P50_4_22.Models.Review { ProductId = Model.IdProduct })
</div>



<style>


    .product-container {
        background: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 1300px;
        margin: auto;
    }

    .product-card {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .product-image {
        max-width: 50%;
        height: auto;
        border-radius: 10px;
    }

    .product-details {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 20px;
    }

    .product-price {
        font-weight: bold;
        color: #27ae60;
        font-size: 1.5em;
        margin-left: 450px;
    }

    .buy-button {
        background-color: #27ae60;
        color: white;
        border: none;
        padding: 10px 20px;
        width: 50%;
        margin-left: 300px;
        font-size: 1em;
        cursor: pointer;
        border-radius: 5px;
    }

        .buy-button:hover {
            background-color: #219150;
        }

    .product-description {
        margin-top: 10px;
    }
</style>
