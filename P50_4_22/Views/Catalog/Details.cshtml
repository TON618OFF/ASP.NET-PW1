@model P50_4_22.Models.Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Reading";
}

<h1>Информация о товаре:</h1>
<div>
    <dl class="dl-horizontal">
        <dt>ID игры:</dt>
        <dd>@Model.IdProduct</dd>

        <dt>Изображение игры:</dt>
        <dd>
            <img src="~/images/@Model.ProductImage" alt="Game Image" width="50%" />
        </dd>

        <dt>Название игры:</dt>
        <dd>@Model.ProductName</dd>

        <dt>Жанр:</dt>
        <dd>@Model.CategoryId</dd>

        <dt>Цена игры:</dt>
        <dd>@Model.ProductPrice</dd>

        <dt>Описание игры:</dt>
        <dd>@Model.ProductDescription</dd>

        <dt>Количество игры в наличии:</dt>
        <dd>@Model.ProductAmount</dd>
    </dl>
</div>

<style>
    body {
        background-color: #ffffff;
        font-family: monospace, sans-serif;
        font-weight: lighter;
    }
</style>
