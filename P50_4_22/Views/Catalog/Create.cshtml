@model P50_4_22.Models.Product
@*
*@
@{
    ViewBag.Title = "Добавление продукта";
}
<form asp-action="create" asp-controller="catalog">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label">Название Продукта</label>
        <input type="text" asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductPrice" class="control-label">Цена</label>
        <input type="number" asp-for="ProductPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductDescription" class="control-label">Описание</label>
        <input type="text" asp-for="ProductDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductAmount" class="control-label">Количество</label>
        <input type="number" asp-for="ProductAmount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductImage" class="control-label">Обложка</label>
        <input type="text" asp-for="ProductImage" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Категория</label>
        <input type="number" asp-for="CategoryId" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default" />
    </div>
</form>

<style>
    body {
        background-color: #ffffff;
        font-family: monospace, sans-serif;
        font-weight: lighter;
    }
</style>