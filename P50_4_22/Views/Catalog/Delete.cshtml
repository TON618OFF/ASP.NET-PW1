@model P50_4_22.Models.Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Удаления продукта";
}

<div>
    <dl class="dl-horizontal">
        <dt>ID игры:</dt>
        <dd>@Html.DisplayFor(model => model.IdProduct)</dd>

        <dt>Изображение игры:</dt>
        <dd>@Html.DisplayFor(model => model.ProductImage)</dd>

        <dt>Название игры:</dt>
        <dd>@Html.DisplayFor(model => model.ProductName)</dd>

        <dt>Жанр:</dt>
        <dd>@Html.DisplayFor(model => model.CategoryId)</dd>

        <dt>Цена игры:</dt>
        <dd>@Html.DisplayFor(model => model.ProductPrice)</dd>

        <dt>Описание игры:</dt>
        <dd>@Html.DisplayFor(model => model.ProductDescription)</dd>

        <dt>Количество игры в наличии:</dt>
        <dd>@Html.DisplayFor(model => model.ProductAmount)</dd>
    </dl>

    <div>
        <form asp-controller="Catalog" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Удалить"/>
            </div>
        </form>
    </div>
</div>

      
<style>
    body {
        background-color: #ffffff;
        font-family: monospace, sans-serif;
        font-weight: lighter;
    }
</style>