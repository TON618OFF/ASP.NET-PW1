@model P50_4_22.Models.Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Изменение данных продукта";
}
<h1>Изменение игры:</h1>
<hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdProduct"/>
        <div class="form-group">
            <label asp-for="ProductImage" class="control-label">Изображение:</label>
            <input asp-for="ProductImage" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ProductName" class="control-label">Название игры:</label>
            <input asp-for="ProductName" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label">Жанр:</label>
            <input asp-for="CategoryId" type="number" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="ProductPrice" class="control-label">Цена игры:</label>
            <input asp-for="ProductPrice" type="number" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ProductDescription" class="control-label">Описание игры:</label>
            <input asp-for="ProductDescription" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ProductAmount" class="control-label">Количество в наличии:</label>
            <input asp-for="ProductAmount" type="number" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-primary"/>
        </div>
    </form>
    

<style>
    body {
        background-color: #ffffff;
        font-family: monospace, sans-serif;
        font-weight: lighter;
    }

    .btn-primary{
        margin-top: 10px;
    }
</style>


