@model IEnumerable<P50_4_22.Models.Product>
@{

    ViewData["Title"] = "Каталог товаров";

    <style>
        body {
            background-color: #ffffff;
            font-family: monospace, sans-serif;
            font-weight: lighter;
        }

        .catalog {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            max-width: 1200px;
            margin: 1px auto;
            padding: 20px;
        }

        .game_card {
            background-color: #1c1c1c;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .game_card img {
                width: 100%;
                height: auto;
                border-radius: 5px;
                margin-bottom: 15px;
            }

            .game_card h4 {
                color: white;
                text-align: center;
                margin: 15px 0;
            }

            .game_card p {
                color: white;
                text-align: center;
                margin-bottom: 15px;
            }

            .game_card button {
                width: 100%;
                background-color: #28a745;
                color: white;
                padding: 10px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .game_card button:hover {
                    background-color: #218838;
                }

            .game_card:hover {
                transform: translateY(-10px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
            }
    </style>

    <h1 style="margin-top: 50px;">Catalog</h1>

    <div class="filter-sort-container" style="margin: 20px; text-align: center;">
        <form asp-action="Index" method="get" style="display: inline-block; margin-right: 20px;">
            <label for="category" style="margin-right: 10px;">Категория:</label>
            <select id="category" name="category" class="form-control" style="display: inline-block; width: auto;">
                <option value="">Все</option>
                <option value="Экшен">Action</option>
                <option value="Приключение">Adventure</option>
                <option value="Инди">Indie</option>
                <!-- Добавьте больше категорий -->
            </select>

            <label for="priceRange" style="margin: 0 10px;">Цена:</label>
            <select id="priceRange" name="priceRange" class="form-control" style="display: inline-block; width: auto;">
                <option value="">Все</option>
                <option value="0-1000">0 - 1000 руб.</option>
                <option value="1001-5000">1001 - 5000 руб.</option>
                <option value="5001-10000">5001 - 10000 руб.</option>
            </select>

            <label for="sortOrder" style="margin-left: 10px; margin-right: 10px;">Сортировка:</label>
            <select id="sortOrder" name="sortOrder" class="form-control" style="display: inline-block; width: auto;">
                <option value="">Без сортировки</option>
                <option value="priceAsc">По цене (возрастание)</option>
                <option value="priceDesc">По цене (убывание)</option>
                <option value="nameAsc">По названию (А-Я)</option>
                <option value="nameDesc">По названию (Я-А)</option>
            </select>

            <button type="submit" class="btn btn-primary" style="margin-left: 10px;">Применить</button>
        </form>
    </div>


    <div class="catalog">
        @foreach (var i in Model)
        {
        <div class="game_card">
            <a asp-action="Details" asp-asp-controller="Home" asp-route-id="@i.IdProduct">
                <img src="~/images/@i.ProductImage" alt="@i.ProductImage">
            </a>
            <h4>@i.ProductName</h4>
            <p>Цена: @i.ProductPrice руб.</p>
                <form asp-action="AddToCart" asp-controller="Cart" method="post">
                    <input type="hidden" name="productId" value="@i.IdProduct" />
                    <input type="number" name="amount" value="1" min="1" max="@i.ProductAmount" />
                    <button type="submit">Добавить в корзину</button>
                </form>
        </div>
        }
    </div>
}
