@model IEnumerable<P50_4_22.Models.CartItem>

<body>
	<h1>Корзина</h1>

	@if (!Model.Any())
	{
		<p style="text-align: center;">Ваша корзина пуста.</p>
	}
	else
	{
		<table>
			<thead>
				<tr>
					<th>Название</th>
					<th>Количество</th>
					<th>Цена</th>
					<th>Общая стоимость</th>
					<th>Действия</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Product.ProductName</td>
						<td>@item.Product.ProductAmount шт.</td>
						<td>@item.Product.ProductPrice руб.</td>
						<td class="actions">

						</td>
					</tr>
				}
			</tbody>
		</table>
	}
</body>