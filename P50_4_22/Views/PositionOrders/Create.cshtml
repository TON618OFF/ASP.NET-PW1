@model P50_4_22.Models.PositionOrder

@{
    ViewData["Title"] = "Создать позицию заказа";
}

<h1>Создать новую позицию заказа</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PositionOrderCount" class="control-label">Количество позиции</label>
        <input asp-for="PositionOrderCount" class="form-control" />
        <span asp-validation-for="PositionOrderCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PositionOrderPrice" class="control-label">Цена позиции</label>
        <input asp-for="PositionOrderPrice" class="form-control" />
        <span asp-validation-for="PositionOrderPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OrderId" class="control-label">Номер заказа</label>
        <select asp-for="OrderId" class="form-control" asp-items="@(ViewData["OrderId"] as SelectList)"></select>
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductId" class="control-label">Продукт</label>
        <select asp-for="ProductId" class="form-control" asp-items="@(ViewData["ProductId"] as SelectList)"></select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Создать</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Вернуться к списку</a>
</form>
