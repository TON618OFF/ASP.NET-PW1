@model List<P50_4_22.Models.Product> //<!-- Здесь `ProductViewModel` — модель данных для товаров -->
@{
    ViewData["Title"] = "Поиск товаров";
}

<div class="container mt-4">
    <h2 class="text-center">Поиск товаров</h2>
    <form asp-controller="Search" asp-action="Index" method="get" class="d-flex mb-4">
        <input type="text" name="searchQuery" class="form-control me-2" placeholder="Введите название товара..." value="@ViewData["SearchQuery"]" />
        <button type="submit" class="btn btn-primary">Искать</button>
    </form>
    @if (Model != null && Model.Count > 0)
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="~/images/@product.ProductImage" class="card-img-top" alt="@product.ProductName" />
                        <div class="card-body">
                            <h5 class="card-title">@product.ProductName</h5>
                            <p class="card-text">@product.ProductDescription</p>
                            <p class="card-text"><strong>Цена:</strong> @product.ProductPrice руб.</p>
                            <a href="@Url.Action("Details", "Catalog", new { id = product.IdProduct })" class="btn btn-primary">Подробнее</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (Model != null && Model.Count == 0)
    {
        <p class="text-center">По вашему запросу ничего не найдено.</p>
    }

